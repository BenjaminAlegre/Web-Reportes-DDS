<script>
    function cambiarVista() {
            // Oculta la primera vista
            document.getElementById("pantallaInicio").classList.add("oculto");

            // Muestra la segunda vista
            document.getElementById("comunidadPesado").classList.remove("oculto");
        }

            function volverVistaComunidadPesado() {
                    // Oculta la primera vista
                    document.getElementById("comunidadPesado").classList.add("oculto");

                    // Muestra la segunda vista
                    document.getElementById("pantallaInicio").classList.remove("oculto");
                }

</script>
